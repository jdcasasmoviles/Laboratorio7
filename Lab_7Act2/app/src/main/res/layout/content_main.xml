<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jdcasas.lab_7act2.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#faf9f9">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Fichero Interno"
        android:id="@+id/Boton"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:textSize="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer Fichero Interno"
        android:id="@+id/Boton2"
        android:layout_alignTop="@+id/Boton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:textSize="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Fichero Externo"
        android:id="@+id/Boton3"
        android:layout_below="@+id/Boton"
        android:layout_alignLeft="@+id/Boton"
        android:layout_alignStart="@+id/Boton"
        android:layout_marginTop="53dp"
        android:textSize="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer Fichero Externo"
        android:id="@+id/Boton4"
        android:layout_alignTop="@+id/Boton3"
        android:layout_alignRight="@+id/Boton2"
        android:layout_alignEnd="@+id/Boton2"
        android:textSize="10dp" />
</RelativeLayout>
